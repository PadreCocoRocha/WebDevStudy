<% include partials/header %>

<div class="ui main text container segment">
    <div class= "ui huge header">Edit Blog</div>
    <form class="ui form" action="/blogs/<%= blogFound._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blogFound.title %>">
            </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%= blogFound.image %>">
        </div>
        <div class="field">
            <label>Blog post goes here</label>
            <textarea name="blog[body]"><%- blogFound.body %></textarea>
        </div>
        <button class="ui violet inverted button" type='input'>Submit</button>
    </form>
</div>

<% include partials/footer %>